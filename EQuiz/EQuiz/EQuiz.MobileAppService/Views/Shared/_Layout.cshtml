<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Система</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/StyleUI/font/iconsmind-s/css/iconsminds.css" />
    <link rel="stylesheet" href="~/StyleUI/font/simple-line-icons/css/simple-line-icons.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/bootstrap.rtl.only.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/fullcalendar.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/datatables.responsive.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/select2.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/bootstrap-stars.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/nouislider.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/vendor/component-custom-switch.min.css" />
    <link rel="stylesheet" href="~/StyleUI/css/main.css" />



</head>


<body id="app-container" class="menu-default show-spinner">
    <nav class="navbar fixed-top">
        <div class="d-flex align-items-center navbar-left">
            <a href="#" class="menu-button d-none d-md-block">
                <svg class="main" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 9 17">
                    <rect x="0.48" y="0.5" width="7" height="1" />
                    <rect x="0.48" y="7.5" width="7" height="1" />
                    <rect x="0.48" y="15.5" width="7" height="1" />
                </svg>
                <svg class="sub" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 17">
                    <rect x="1.56" y="0.5" width="16" height="1" />
                    <rect x="1.56" y="7.5" width="16" height="1" />
                    <rect x="1.56" y="15.5" width="16" height="1" />
                </svg>
            </a>

            <a href="#" class="menu-button-mobile d-xs-block d-sm-block d-md-none">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 26 17">
                    <rect x="0.5" y="0.5" width="25" height="1" />
                    <rect x="0.5" y="7.5" width="25" height="1" />
                    <rect x="0.5" y="15.5" width="25" height="1" />
                </svg>
            </a>


        </div>


        <a class="navbar-logo" href="html">
            <span class="logo d-none d-xs-block"></span>
            <span class="logo-mobile d-block d-xs-none"></span>
        </a>

        <div class="navbar-right">
            <div class="header-icons d-inline-block align-middle">


                <div class="position-relative d-none d-sm-inline-block">
                    <button class="header-icon btn btn-empty" type="button" id="iconMenuButton" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        <i class="simple-icon-grid"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right mt-3  position-absolute" id="iconMenuDropdown">
                        <a href="#" class="icon-menu-item">
                            <i class="iconsminds-equalizer d-block"></i>
                            <span>Настройки</span>
                        </a>

                        <a href="#" class="icon-menu-item">
                            <i class="iconsminds-male-female d-block"></i>
                            <span>Пользователи</span>
                        </a>



                    </div>
                </div>

            </div>

            <div class="user d-inline-block">
                <button class="btn btn-empty p-0" type="button" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                    <span class="name">Виктор</span>
                    <span>
                        <img alt="Фото профиля" src="~/Content/img/profile-pic-p.png" />
                    </span>
                </button>

                <div class="dropdown-menu dropdown-menu-right mt-3">
                    <a class="dropdown-item" href="#">Аккаунт</a>
                    <a class="dropdown-item" href="#">Настройки</a>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
                    }


                </div>
            </div>
        </div>
    </nav>
    

    @RenderBody()
     
    <script src="~/SystemJS/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/SystemJS/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/SystemJS/vendor/Chart.bundle.min.js"></script>
    <script src="~/SystemJS/vendor/chartjs-plugin-datalabels.js"></script>
    <script src="~/SystemJS/vendor/moment.min.js"></script>
    <script src="~/SystemJS/vendor/fullcalendar.min.js"></script>
    <script src="~/SystemJS/vendor/datatables.min.js"></script>
    <script src="~/SystemJS/vendor/perfect-scrollbar.min.js"></script>
    <script src="~/SystemJS/vendor/owl.carousel.min.js"></script>
    <script src="~/SystemJS/vendor/progressbar.min.js"></script>
    <script src="~/SystemJS/vendor/jquery.barrating.min.js"></script>
    <script src="~/SystemJS/vendor/select2.full.js"></script>
    <script src="~/SystemJS/vendor/nouislider.min.js"></script>
    <script src="~/SystemJS/vendor/bootstrap-datepicker.js"></script>
    <script src="~/SystemJS/vendor/Sortable.js"></script>
    <script src="~/SystemJS/vendor/mousetrap.min.js"></script>
    <script src="~/SystemJS/dore.script.js"></script>
    <script src="~/SystemJS/scripts.js"></script>


    @RenderSection("scripts", required: false)

</body>

</html>
